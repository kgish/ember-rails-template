<h1>Users list</h1>

<p> {{link-to "New User" "users.new" }} </p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Firstname
        </th>
        <th>
          Lastname
        </th>
        <th>
          Email
        </th>
        <th>
          Details
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |user|}}
        <tr>
          <td>
            {{user.firstname}}
          </td>
          <td>
            {{user.lastname}}
          </td>
          <td>
            {{user.email}}
          </td>
          <td>
            {{user.details}}
          </td>
          <td>
            {{link-to "Edit" "users.edit" user}}
          </td>
          <td>
            {{link-to "Show" "users.show" user}}
          </td>
          <td>
            <a href="#" {{action "remove" user}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Users found
  </p>
{{/if}}
