<h1>Users list</h1>

<p> {{link-to "New User" "users.new" }} </p>

{{#if model.length}}
  <table class="table table-striped table-condensed table-bordered">
    <thead>
      <tr>
        <th> Firstname </th>
        <th> Lastname </th>
        <th> Email </th>
        <th> Description </th>
        <th colspan="2"> </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |user|}}
        <tr>
          <td> {{user.firstname}} </td>
          <td> {{user.lastname}} </td>
          <td> {{user.email}} </td>
          <td> {{user.description}} </td>
          <td> {{#link-to "users.edit" user title='Edit user'}}{{fa-icon 'edit'}}{{/link-to}} </td>
          <td> <a href="#" {{action "remove" user}} title="Delete user">{{fa-icon 'trash'}}</a> </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No users found
  </p>
{{/if}}
